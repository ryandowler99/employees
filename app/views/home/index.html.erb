<h1><%= @title %></h1>

<% if user_signed_in? %>
   <h2>Hello <%= current_user.email %></h2>
   <h3>Your role: <%= current_user.role %></h3>
   <%= button_to("Log out", destroy_user_session_path, data: { turbo: false, turbo_method: :delete }, method: :delete) %>
<% else %>
   <h2> You are not signed in </h2>
    <%= link_to "Sign up", new_user_registration_path %>
    <%= link_to "Sign in", new_user_session_path %>
<% end %>
