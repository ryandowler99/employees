<p style="color: green"><%= notice %></p>

<h1>Employees</h1>

<div id="employees">
  <% @employees.each do |employee| %>
    <%= render employee %>
    <p>
      <%= link_to "Show this employee", employee %>
      <%= link_to "New holiday for: #{employee.name}", :controller => holidays_path, :action => :new, :id =>employee.id %>
    </p>
  <% end %>
</div>

<%= link_to "New employee", new_employee_path %>
